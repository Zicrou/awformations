<div id="<%= dom_id product %>" style="margin-top:10px;">
  <div class="row d-flex px-3">
    <div class="col-md-8" style="">
      <div class="d-flex justify-content-center">
        <%= video_tag url_for(product.video), :controls => true, style:"width:100%;height:auto" if product.video.video?%>
      </div>
    </div>

    <div class="col-md-4" style="margin-top:-0.6%"> 
  
      <div class="d-flex justify-content-center">
        <h1 class=""><%= product.title %></h1>
      </div>

      <div class="d-flex justify-content-center h2">
        <%= product.price %>â‚¬
      </div>

      <div class="d-flex justify-content-center">
        <%= product.description %>
      </div>

      <div class="d-flex justify-content-center mt-4">
        <%= form_with(url: cart_add_path) do |f| %>
          <%= f.hidden_field :id, value: product.id %>
          <%= f.hidden_field :quantity, value:1, min: 1, max: 1 %>
          <%= f.submit "Ajouter au panier", class:"btn btn-outline-primary" %>
        <% end %>
      </div>
    </div>
  </div>
      
  <div class="container p-5">
    <div class="d-flex justify-content-center">
      <%= product.content %>
    </div>
  </div>
</div>
