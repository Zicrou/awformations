<div id="<%= dom_id product %>" style="margin-top:10px;">
  <div class="row mx-3">
    <div class="col-md-8 px-5" style="">
      <div class="d-flex justify-content-center">
        <%= video_tag url_for(product.video), :controls => true, style:"width:100%;height:auto" if product.video.video?%>
      </div>
      
      <div class="container p-5">
        <div class="d-flex justify-content-center">
          <%= product.content %>
        </div>
      </div>

      <!--div class="container p-5">
        <div class="d-flex justify-content-center">
          <%#= product.price %>
        </div>
      </div-->

    </div>

    <div class="col-md-4 px-5" style=""> 
    
      <div class="d-flex justify-content-center">
        <h1 class="py-5"><%= product.title %></h1>
      </div>

      <div class="d-flex justify-content-center h2">
        <%= product.price %>â‚¬
      </div>

      <div class="d-flex justify-content-center">
        <%= product.description %>
      </div>

      <div class="d-flex justify-content-center">
        <%= form_with(url: cart_add_path) do |f| %>
          <%= f.hidden_field :id, value: product.id %>
          <%= f.hidden_field :quantity, value:1, min: 1, max: 1 %>
          <%= f.submit "Ajouter au panier" %>
        <% end %>
      </div>
    </div>

    
    <!--div>
      <%#= link_to image_tag(product.thumbnail, style:"width:400px;height:auto"), products_path if product.thumbnail.present? %>
    </div-->

    <%#= link_to "Show this product", product %>
  </div>
</div>

</div>
