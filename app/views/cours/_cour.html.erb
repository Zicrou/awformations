<div id="<%= dom_id cour %>" style="margin-top:10px; margin-left:5px;">
  <div class="d-flex justify-content-center">
    <h1><%= cour.title %></h1>
  </div>

  <div class="container py-5">
    <div>
      <div class="d-flex justify-content-center">
        <%= video_tag url_for(cour.video), :controls => true, style:"width:100%;height:auto" if cour.video.video?%>
      </div>
      
      <div class="d-flex py-5 justify-content-center">
        <%= cour.content %>
      </div>
    </div>

    <div>
      <%#= link_to image_tag(cour.thumbnail, style:"width:400px;height:auto"), cours_path if cour.thumbnail.present? %>
    </div-->

    <%#= link_to "Show this cour", cour %>
  </div>
</div>

