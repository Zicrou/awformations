<div id="<%= dom_id cour %>" style="margin-top:10px;">
  <div class="d-flex justify-content-center">
    <h1 class="py-5"><%= cour.title %> €80.00</h1>
  </div>

  <div class="row mx-3">
    <div class="col-md-8 px-5" style="">
      <div class="d-flex justify-content-center">
        <%= video_tag url_for(cour.video), :controls => true, style:"width:100%;height:auto" if cour.video.video?%>
      </div>
      
      <div class="container p-5">
        <div class="d-flex justify-content-center">
          <%= cour.content %>
        </div>
      </div>
    </div>

    <div class="d-flex justify-content-center col-md-2" style="padding-top:19%;">
      <%= form_with model: @line_items, url: add_to_cart_line_item_path  do |form| %>
        <%= form.submit "Ajouter dans mon panier", class:"bi-cart-fill me-1 btn btn-info" %>
      <% end %>
    </div>

    <div>
      <%#= link_to image_tag(cour.thumbnail, style:"width:400px;height:auto"), cours_path if cour.thumbnail.present? %>
    </div-->

    <%#= link_to "Show this cour", cour %>
  </div>
</div>

